"""
项目模式

这个模块定义了项目的Pydantic模式，用于API请求和响应的数据验证。
"""

from datetime import datetime
from typing import Optional

from pydantic import BaseModel, Field


# 共享属性
class ItemBase(BaseModel):
    """
    项目基础模式
    """
    title: str = Field(..., title="项目标题", max_length=255)
    description: Optional[str] = Field(None, title="项目描述")


# 创建请求
class ItemCreate(ItemBase):
    """
    创建项目请求模式
    """
    pass


# 更新请求
class ItemUpdate(ItemBase):
    """
    更新项目请求模式
    """
    title: Optional[str] = Field(None, title="项目标题", max_length=255)


# 数据库模型
class ItemInDBBase(ItemBase):
    """
    数据库项目模式
    """
    id: int
    created_at: datetime
    updated_at: datetime
    
    class Config:
        from_attributes = True


# API响应
class ItemResponse(ItemInDBBase):
    """
    项目响应模式
    """
    pass