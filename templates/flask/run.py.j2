#!/usr/bin/env python3
# -*- coding: utf-8 -*-

"""
应用入口点

这个模块是应用的入口点，用于启动应用。
"""

import os
from app import create_app

# 创建应用实例
app = create_app(os.getenv('FLASK_CONFIG', 'development'))

if __name__ == '__main__':
    # 启动应用
    app.run(
        host=os.getenv('FLASK_HOST', '0.0.0.0'),
        port=int(os.getenv('FLASK_PORT', 5000)),
        debug=app.config['DEBUG']
    )